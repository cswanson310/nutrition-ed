<!DOCTYPE html>
<html>
<head>
  <title>NutritionEd</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>

<%= yield %>

<div class='logout'>
  <% if session[:user_id] && @user then %>
    <p>Logged in as <%= @user.username %>, <%= link_to "Logout", logout_path %></p>
  <% end %>
</div>

</body>
</html>
